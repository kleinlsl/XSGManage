<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Student.GradeActivity"
    android:padding="5dp" >
    <LinearLayout
        android:id="@+id/user_center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="vertical"
        android:gravity="center"
        >
        <ImageView
            android:id="@+id/message_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="14dp"
            android:background="@drawable/round_stylebegin"
            android:src="@drawable/icon24">
        </ImageView>
        <TextView
            android:id="@+id/c_user_name"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/image_round"
            android:text="username">
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <TextView
            android1:id="@+id/c_grade_xue"
            android1:layout_weight="0.5"
            android1:gravity="center"
            android:background="@drawable/image_round"
            android1:text="学期"
            android1:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android1:id="@+id/c_grade_course"
            android1:layout_weight="0.7"
            android1:gravity="center"
            android:background="@drawable/image_round"
            android1:text="科目"
            android1:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android1:id="@+id/c_grade_value"
            android1:layout_weight="0.3"
            android1:gravity="center"
            android1:text="成绩"
            android:background="@drawable/image_round"
            android1:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            />
    </LinearLayout>
    <ListView
        android1:id="@+id/lst_grade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </ListView>

</LinearLayout>